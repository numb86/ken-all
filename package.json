{
  "name": "ken-all",
  "version": "0.4.3",
  "description": "Ken All は、郵便番号で住所を検索できる npm パッケージです。",
  "keywords": [
    "postcode",
    "zipcode",
    "ken-all"
  ],
  "engines": {
    "node": ">=12.22.2",
    "yarn": ">=1.19.0"
  },
  "homepage": "https://github.com/numb86/ken-all",
  "bugs": {
    "url": "https://github.com/numb86/ken-all/issues"
  },
  "author": {
    "name": "numb_86",
    "url": "https://github.com/numb86"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/numb86/ken-all.git"
  },
  "license": "MIT",
  "exports": "./esm/index.js",
  "type": "module",
  "types": "./esm/index.d.ts",
  "files": [
    "esm"
  ],
  "scripts": {
    "build": "yarn && mkdir -p ./esm && rm -rf esm/* && tsc -p ./tsconfig.esm.json",
    "lint": "oxlint src test",
    "test": "tsx --test test/**/*.test.ts",
    "type-check": "tsc src/*.ts --noEmit",
    "prepublishOnly": "yarn run build"
  },
  "devDependencies": {
    "@types/node": "^24.5.0",
    "oxlint": "^1.43.0",
    "prettier": "^2.2.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
